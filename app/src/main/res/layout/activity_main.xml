<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Main Image View -->

    <!-- Button Layout at the Bottom -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="366dp"
        android:layout_height="349dp"
        android:contentDescription="@string/image_content_description"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.503" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Naruto Button -->

        <!-- Bleach Button -->

        <!-- Fairy Tail Button -->
        <ImageButton
            android:id="@+id/button01"
            android:layout_width="8dp"
            android:layout_height="135dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/naruto_button"
            android:padding="8dp"
            android:src="@drawable/icon01" />

        <ImageButton
            android:id="@+id/button02"
            android:layout_width="0dp"
            android:layout_height="136dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/bleach_button"
            android:padding="8dp"
            android:src="@drawable/icon02" />

        <ImageButton
            android:id="@+id/button03"
            android:layout_width="0dp"
            android:layout_height="138dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/fairy_tail_button"
            android:padding="8dp"
            android:src="@drawable/icon03" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
